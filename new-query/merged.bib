@Article{WOS:000956396600003,
  author = {Christina D. Economos and Larissa Calancie and Ariella R. Korn and Steven Allender and Julia M. Appel and Peter Bakun and Erin Hennessy and Peter S. Hovmand and Matt Kasman and Melanie Nichols and Mark C. Pachucki and Boyd A. Swinburn and Alison Tovar and Ross A. Hammond},
  title = {Community coalition efforts to prevent childhood obesity: two-year
   results of the Shape Up Under 5 study},
  journal = {BMC PUBLIC HEALTH},
  year = {2023},
  volume = {23},
  number = {1},
  month = {MAR 20},
  abstract = {BackgroundCross-sector collaborations and coalitions are promising
   approaches for childhood obesity prevention, yet there is little
   empirical evidence about how they affect change. We hypothesized that
   changes in knowledge of, and engagement with, childhood obesity
   prevention among coalition members can diffuse through social networks
   to influence policies, systems, and environments.MethodsWe studied a
   community coalition (N = 16, Shape Up Under 5 ``SUU5 Committee{''})
   focused on early childhood obesity prevention in Somerville, MA from
   2015-17. Knowledge, engagement, and social network data were collected
   from Committee members and their network contacts (n = 193) at five
