@article{ WOS:000862272800001,
Author = {White, Kelsey B. and Resmondo, Zoe N. and Jennings, J'Aime C. and Creel,
   Liza M. and Kelly Pryor, Brandy N.},
Title = {A social network analysis of interorganisational collaboration: Efforts
   to improve social connectedness},
