@article{ WOS:000576388300001,
Author = {Prochnow, Tyler and Patterson, Megan S. and Sharkey, Joseph and Umstattd
   Meyer, M. Renee},
Title = {Health coalition collaboration network, perceived satisfaction and
   success},
